<Window Name="TheMainWindow"
        x:Class="IMTA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMTA"
        mc:Ignorable="d"
        Title="IMTA" Height="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenHeightKey}}" Width="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}" Background="Black"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        KeyDown="InfoBox_KeyDown">
    <StackPanel Orientation="Vertical" Name="mainPanel" Height="744" Width="1382">
        <StackPanel x:Name="EnemyBox" Height="258" Width="1382" Orientation="Horizontal">
            
        </StackPanel>
        <Canvas x:Name="InfoBox" Height="258" Width="1382" Keyboard.KeyDown="InfoBox_KeyDown">
            <Border BorderBrush="Gray" BorderThickness="5" Width="1364" Height="238" Canvas.Left="3" Canvas.Top="10"/>
            <TextBlock x:Name="InfoText" Background="Black" Foreground="White" Height="204" Width="1326" Canvas.Left="25" Canvas.Top="25" Visibility="Hidden" FontSize="36"/>
            <WrapPanel x:Name="EntitySelectionMenu" Height="204" Margin="25,25,25,25" Width="1326" Visibility="Hidden" />
            <Border x:Name="AttackBox" BorderBrush="Green" BorderThickness="5" Canvas.Left="378" Canvas.Top="25" Height="204" Width="622">
                <Canvas x:Name="AttackWindow"/>
            </Border>
        </Canvas>
        <StackPanel x:Name="ButtonBox" Orientation="Horizontal" Height="198" Width="1382">
            <Separator Margin="0" Width="173.125" />
            <Button x:Name="AttackButton" Style="{StaticResource IMTAButtons}" Content="Attack" Foreground="Red" Command="{Binding Path=AttackButtonClicked, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
            <Separator Margin="0" Width="301.25" />
            <Button x:Name="Talk" Style="{StaticResource IMTAButtons}" Content="Talk" Foreground="Blue" Command="{Binding Path=TalkButtonClicked, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
            <Separator Margin="0" Width="301.25" />
            <Button x:Name="Spare" Style="{StaticResource IMTAButtons}" Content="Spare" Foreground="Green" Command="{Binding Path=SpareButtonClicked, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
            <Separator Margin="0" Width="131" />
        </StackPanel>

    </StackPanel>
</Window>
